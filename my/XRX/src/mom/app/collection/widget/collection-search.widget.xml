<xrx:variables>
<xrx:variable>
	<xrx:name>$collectionId</xrx:name>
	<xrx:expression>tokenize(request:get-uri(),'/')[3]</xrx:expression>
</xrx:variable>
<xrx:variable>
	<xrx:name>$debug</xrx:name>
	<xrx:expression>util:log("ERROR", $collectionId)</xrx:expression>
</xrx:variable>
</xrx:variables>
