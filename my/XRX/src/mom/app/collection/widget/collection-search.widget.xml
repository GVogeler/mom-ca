  <xrx:view>
  	<div id="leftFrame">
  	<div id="divSearchType">
  		<div id="contentTab" class="typeTab active">Content</div>
  		<div id="keyTab" class="typeTab inactive">Key</div>
  	</div>
  	<div id="searchOptions">
  	    <div id="elementName"><span>Element:</span><input id="elementNameField" type="text"></input></div>
		<div id="contentSearch" class="options active">
			<div id="firstCharacter">
	        	<span>First Character:</span>
	        	<select id="firstCharacterSelect">
	        		<option>All</option>
	        		<option>A</option>
	        		<option>B</option>
	        		<option>C</option>
	        	    <option>D</option>
	        	    <option>E</option>
	        	    <option>F</option>
	        	    <option>G</option>
	        	    <option>H</option>
	        	    <option>I</option>
	        	    <option>J</option>
	        	    <option>K</option>
	        	    <option>L</option>
	        		<option>M</option>
	        		<option>N</option>
	        		<option>O</option>
	        		<option>P</option>
	        		<option>Q</option>
	        		<option>R</option>
	        		<option>S</option>
	        		<option>T</option>
	        		<option>U</option>
	        		<option>V</option>
	        		<option>W</option>
	        		<option>X</option>
	        		<option>Y</option>
	        		<option>Z</option>
	        	</select>
	   		</div>
	   		<div id="key">
	       		<form id="keyForm">
	       			<span id="keyLabel">@key </span><input type="checkbox" name="keysearch" id="keysearchcheck" value=""/>
	      		</form>
	   		</div>
  			<button id="contentSearchButton">Search</button>
   		</div>
   		<div id="keySearch" class="options inactive">
   			<div id="keyLabel"><span>Key:</span><input id="keyField" type="text"></input></div>
   		<button id="keySearchButton">Search</button>	
   		</div>
  	</div>
  	<div id="termResults">
  		<ul id="termResultsList"></ul>
  	</div>
  </div>
	  <div>
		  <div id="searchresults">
			  { if(empty(session:get-attribute("_collectionSearchCharters"))) then ()
			  else
			  for $charter at $num in session:get-attribute("_collectionSearchCharters")//atom:entry
			  let $entry := <atom:entry xmlns:atom="http://www.w3.org/2005/Atom">{$charter/*}</atom:entry>
			  return
			  <div id="dcharter-preview-main">
				  <xrx:subwidget>
					  <xrx:atomid>tag:www.monasterium.net,2011:/mom/widget/result</xrx:atomid>
					  <xrx:pass>
						  <xrx:parameter>
							  <xrx:name>$constructor:charter</xrx:name>
							  <xrx:expression>root($entry)</xrx:expression>
						  </xrx:parameter>
						  <xrx:parameter>
							  <xrx:name>$constructor:pos</xrx:name>
							  <xrx:expression>$num + 1 -1</xrx:expression>
						  </xrx:parameter>
					  </xrx:pass>
				  </xrx:subwidget>
			  </div>
			  }
		  </div>
	  </div>
	
<script type="text/javascript">jQuery(document).ready(function(){{ 
 $("#leftFrame").collectionIndexSearch({{ requestRoot:"{conf:param('request-root')}", collectionId:"{$collectionId}", termsearch:'{session:get-attribute("_collectionSearchAsJson")}' }}); }});</script>
  
