<xrx:variables>
<xrx:variable>
	<xrx:name>$collectionId</xrx:name>
	<xrx:expression>request:get-parameter("mycollection", "")</xrx:expression>
</xrx:variable>
</xrx:variables>
    <xrx:portal>tag:www.monasterium.net,2011:/mom/portal/default</xrx:portal>
    <xrx:init>
        <xrx:processor>
            <xrx:xformsflag>false</xrx:xformsflag>
            <xrx:jqueryflag>true</xrx:jqueryflag>
        </xrx:processor>
        </xrx:init>
        <xrx:csss>
        <style type="text/css">
        #searchbar{{
        	background-color: lightgrey;
        	width: 185px;
        }}
        #tagnamefield{{
        width: 159px;
        }}
        
        #right-content{{
        background-color: lightgrey;
        position: absolute;
        left: 230px;
        width: 700px;
        height: 100px;
        top: 19px;
        }}
        </style>
        </xrx:csss>
        <xrx:jss>
            <xrx:resource>tag:www.monasterium.net,2011:/xrx/resource/jquery/jquery</xrx:resource>
   			<xrx:resource>tag:www.monasterium.net,2011:/xrx/resource/jquery/ui/core</xrx:resource>
        	<xrx:resource>tag:www.monasterium.net,2011:/xrx/resource/jquery/ui/widget</xrx:resource>
    
    <xrx:resource>tag:www.monasterium.net,2011:/mom/resource/jquery/ui/myCollectionMockup</xrx:resource>
        </xrx:jss>
  <xrx:view>
  <div>
  	<div id="searchbar">
  	<div id="bla">{$collectionId}</div>
  		<div id="free">
        	<span>Tagname: </span><input id="tagnamefield" type="text"></input>
        	
        	<div>
	        	<span>First Character:</span>
	        	<select id="firstCharacterSelect">
	        		<option>All</option>
	        		<option>A</option>
	        		<option>B</option>
	        		<option>C</option>
	        	    <option>D</option>
	        	    <option>E</option>
	        	    <option>F</option>
	        	    <option>G</option>
	        	    <option>H</option>
	        	    <option>I</option>
	        	    <option>J</option>
	        	    <option>K</option>
	        	    <option>L</option>
	        		<option>M</option>
	        		<option>N</option>
	        		<option>O</option>
	        		<option>P</option>
	        		<option>Q</option>
	        		<option>R</option>
	        		<option>S</option>
	        		<option>T</option>
	        		<option>U</option>
	        		<option>V</option>
	        		<option>W</option>
	        		<option>X</option>
	        		<option>Y</option>
	        		<option>Z</option>
	        	</select>
       		</div>
       		<form id="keyform">
       		<input type="checkbox" name="keysearch" id="keysearchcheck" value="">keysearch</input>
       		</form>
       		<button id="testbutton">Searchblaaaaaaaaaaa</button>
       		<div>
				<ul id="resultlist"></ul>
       		</div>
        </div>      
            <script type="text/javascript">jQuery(document).ready(function(){{ 
 $("#searchbar").collectionIndexSearch({{ requestRoot:"{conf:param('request-root')}", collectionId:"{$collectionId}", termsearch:'{session:get-attribute("_collectionSearchAsJson")}' }}); }});</script>
   </div>

       		      		
 </div>
     <div id="searchresults">
    			{ if(empty(session:get-attribute("_collectionSearchCharters"))) then <div>leeer</div>
    			  else     			
    			   for $charter at $num in session:get-attribute("_collectionSearchCharters")//atom:entry
    				let $entry := <atom:entry xmlns:atom="http://www.w3.org/2005/Atom">{$charter/*}</atom:entry>
    			return
    	 <div id="dcharter-preview-main">                
		    <xrx:subwidget>
			      <xrx:atomid>tag:www.monasterium.net,2011:/mom/widget/result</xrx:atomid>
			      <xrx:pass>
			        <xrx:parameter>
			          <xrx:name>$constructor:charter</xrx:name>
			          <xrx:expression>root($entry)</xrx:expression>
			        </xrx:parameter>
              <xrx:parameter>
                <xrx:name>$constructor:pos</xrx:name>
                <xrx:expression>$num + 1 -1</xrx:expression>
              </xrx:parameter>
			      </xrx:pass>
			    </xrx:subwidget>
          </div>
    			}
       		</div> 
       		
  </xrx:view>
</xrx:widget>